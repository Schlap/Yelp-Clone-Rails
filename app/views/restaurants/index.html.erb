<% if @restaurants.any? %>
  <% @restaurants.each do |restaurant| %>
    <h2><%= link_to "#{restaurant.name}", restaurant_path(restaurant) %></h2>

    <% if restaurant.user == current_user %>

    <h3><%= link_to "Edit #{restaurant.name}", edit_restaurant_path(restaurant) %>

    <% end %>

    <%= link_to "Delete #{restaurant.name}", restaurant_path(restaurant), method: :delete %><br>
    <%= link_to "Review #{restaurant.name}", new_restaurant_review_path(restaurant) %></h3>
    <h3>Reviews for <%= restaurant.name %></h3>
    <% if !restaurant.reviews.any? %>
              <p>No reviews.</p>
        <% else %>
              <ul>
                <% restaurant.reviews.each do |review| %>
                      <li><%= review.thoughts %> <strong><%= review.rating %>/5</strong></li>
                <% end %>
          </ul>      
      <% end %>
  <% end %>
<% else %>
  No restaurants yet
<% end %>

<% if user_signed_in? %>

  <a href="/restaurants/new">Add a restaurant</a>

<% end %>